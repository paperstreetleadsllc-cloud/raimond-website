# RAimond Environment Variables
# Copy this file to .env.local and fill in your values

# ========================================
# REQUIRED - IP Hashing Salt
# ========================================
# Used to hash IP addresses for privacy compliance
# Generate with: openssl rand -hex 32
IP_SALT=your-random-salt-here-change-me

# ========================================
# REQUIRED - Supabase Configuration
# ========================================
# Get these from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here

# ========================================
# REQUIRED - Resend Email Service
# ========================================
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here

# ========================================
# OPTIONAL - hCaptcha (Bot Protection)
# ========================================
# Get these from: https://www.hcaptcha.com/
HCAPTCHA_SITE_KEY=your-site-key-here
HCAPTCHA_SECRET_KEY=your-secret-key-here

# ========================================
# PRISMA DATABASE
# ========================================
# SQLite for local dev (default)
DATABASE_URL="file:./dev.db"
# For production with Postgres (Vercel Postgres, Neon, etc.)
# DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"

# ========================================
# JWT SECRET
# ========================================
# Generate with: openssl rand -base64 32
JWT_SECRET="replace-with-strong-secret-use-openssl-rand-base64-32"

# ========================================
# APP CONFIGURATION
# ========================================
APP_URL="http://localhost:5173"  # Use your Vercel URL in production
MAIL_FROM="RAimond <no-reply@yourdomain.com>"

# ========================================
# EMAIL PROVIDER
# ========================================
# Choose: "resend" | "postmark" | "sendgrid"
EMAIL_PROVIDER="resend"

# Email Provider API Keys (choose one based on EMAIL_PROVIDER)
# RESEND_API_KEY already defined above
POSTMARK_API_KEY=""
SENDGRID_API_KEY=""

# ========================================
# STORAGE PROVIDER
# ========================================
# Choose: "blob" | "s3" | "local"
STORAGE_PROVIDER="local"

# Vercel Blob Storage (if STORAGE_PROVIDER=blob)
BLOB_READ_WRITE_TOKEN=""
PDF_DESKTOP_URL=""
PDF_MOBILE_URL=""

# AWS S3 Storage (if STORAGE_PROVIDER=s3)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
S3_BUCKET=""
S3_PDF_DESKTOP_KEY="pdfs/RAImond_Traders_Operating_System_Desktop.pdf"
S3_PDF_MOBILE_KEY="pdfs/RAImond_Traders_Operating_System_Mobile_6x9.pdf"

# ========================================
# RECAPTCHA (Optional)
# ========================================
RECAPTCHA_ENABLED="false"
RECAPTCHA_SITE_KEY=""
RECAPTCHA_SECRET_KEY=""

# ========================================
# ADMIN & SECURITY
# ========================================
ADMIN_PASSWORD="set-a-strong-password-here"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="60000"   # 1 minute
RATE_LIMIT_MAX="5"              # 5 requests per window per IP

# Link Configuration
LINK_TTL_HOURS="24"             # Magic link expiration in hours

# ========================================
# FEATURE FLAGS
# ========================================
# Enable new hero design with HUD preview and bright CTA
# Set to "true" to enable, "false" or omit to use original hero
VITE_RAIMOND_HERO_V2="false"

# ========================================
# DEVELOPMENT ONLY
# ========================================
# Uncomment for local development
# NODE_ENV=development
